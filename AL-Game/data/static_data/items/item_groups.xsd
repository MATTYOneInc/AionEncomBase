	<xs:simpleType name="ItemRace">
	    <xs:restriction base="xs:string">
            <xs:enumeration value="PC_ALL"/>
            <xs:enumeration value="ELYOS"/>
            <xs:enumeration value="ASMODIANS"/>
        </xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="ItemGroupIndex">
	    <xs:restriction base="xs:string">
            <xs:enumeration value="NONE"/>
